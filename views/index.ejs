<!doctype html><html><head><meta charset="utf-8"><title>PingComp</title>
<style>body{font-family:Arial;margin:20px}table{border-collapse:collapse;width:100%}th,td{border:1px solid #ddd;padding:6px;font-size:12px}th{background:#f5f5f5}form.inline{display:inline}</style>
</head><body>
<h2>PingComp — 潜在客户管理</h2>
<form method="get" action="/">
  <input name="q" placeholder="搜索 name/vertical/source" value="<%= q %>">
  <input name="minScore" type="number" placeholder="min score" value="<%= min || '' %>">
  <label><input type="checkbox" name="locked" value="1" <%= onlyLocked ? 'checked' : '' %>> 仅看人工锁定</label>
  <button type="submit">筛选</button>
  <a href="/export.csv">导出CSV</a>
</form>
<table>
<tr><th>ID</th><th>Name</th><th>Score</th><th>Locked</th><th>Vertical</th><th>LinkedIn</th><th>Latest</th><th>Reason</th><th>Action</th></tr>
<% rows.forEach(r=> { %>
<tr>
<td><%= r.id %></td>
<td><%= r.name %></td>
<td><%= r.tidb_potential_score ?? '' %></td>
<td><%= r.manual_locked ? 'Y' : '' %></td>
<td><%= r.vertical || '' %></td>
<td><a href="<%= r.linkedin %>" target="_blank">link</a></td>
<td><a href="<%= r.latest_news %>" target="_blank">news</a></td>
<td><%= r.tidb_potential_reason || '' %></td>
<td>
  <a href="/edit/<%= r.id %>">编辑</a>
  <% if (r.manual_locked) { %>
    <form class="inline" method="post" action="/unlock/<%= r.id %>"><button type="submit">解锁</button></form>
  <% } %>
</td>
</tr>
<% }) %>
</table>
</body></html>
