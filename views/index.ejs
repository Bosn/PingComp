<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PingComp</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="brand">
        <img src="/logo.svg" class="logo" alt="PingComp logo">
        <div>
          <h1>PingComp</h1>
          <p>潜在客户人工清洗与标注 · MySQL as Source of Truth</p>
        </div>
      </div>
      <a class="btn" href="/export.csv">导出 CSV</a>
    </div>

    <div class="card topbar">
      <form method="get" action="/" class="filters">
        <input class="input" name="q" placeholder="搜索 Name / Vertical / Source" value="<%= q %>">
        <input class="input" name="minScore" type="number" min="0" max="100" placeholder="最低分" value="<%= min || '' %>">
        <label class="btn ghost"><input type="checkbox" name="locked" value="1" <%= onlyLocked ? 'checked' : '' %>> 仅人工锁定</label>
        <button class="btn primary" type="submit">筛选</button>
        <a class="btn" href="/">重置</a>
      </form>
      <div class="stats">
        <span>显示条数：<strong><%= rows.length %></strong></span>
        <span>说明：编辑即自动锁定，后续同步不会覆盖。</span>
      </div>
    </div>

    <div class="card table-wrap">
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Score</th>
          <th>Locked</th>
          <th>Vertical</th>
          <th>LinkedIn</th>
          <th>Latest</th>
          <th>Reason</th>
          <th>Action</th>
        </tr>
        <% rows.forEach(r=> { %>
          <% const s = Number(r.tidb_potential_score || 0); %>
          <% const scoreClass = s >= 75 ? 'score-high' : (s >= 50 ? 'score-mid' : 'score-low'); %>
          <tr>
            <td><%= r.id %></td>
            <td>
              <div><strong><%= r.name %></strong></div>
              <div class="muted"><%= r.source || '' %></div>
            </td>
            <td><span class="badge <%= scoreClass %>"><%= r.tidb_potential_score ?? '-' %></span></td>
            <td><span class="<%= r.manual_locked ? 'locked' : 'muted' %>"><%= r.manual_locked ? 'LOCKED' : '—' %></span></td>
            <td><%= r.vertical || '' %></td>
            <td><% if (r.linkedin) { %><a class="link" href="<%= r.linkedin %>" target="_blank">LinkedIn</a><% } %></td>
            <td><% if (r.latest_news) { %><a class="link" href="<%= r.latest_news %>" target="_blank">Source</a><% } %></td>
            <td><%= r.tidb_potential_reason || '' %></td>
            <td>
              <div class="row-actions">
                <a class="btn" href="/edit/<%= r.id %>">编辑</a>
                <% if (r.manual_locked) { %>
                  <form class="form-inline" method="post" action="/unlock/<%= r.id %>">
                    <button class="btn" type="submit">解锁</button>
                  </form>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </div>
</body>
</html>
