<!doctype html><html><head><meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1"><title>PingComp · Activity</title><link rel="stylesheet" href="/styles.css"><script src="/theme.js"></script>
  <script src="/lang.js"></script></head>
<body><div class="container">
<div class="header"><div class="brand"><img src="/logo.svg" class="logo" alt="logo"><div><h1>Activity Log</h1><p>人工与系统操作审计</p></div></div><div style="display:flex;gap:8px;align-items:center;"><select class="input" style="width:110px" onchange="setLang(this.value)"><option value="zh" <%= lang==='zh' ? 'selected' : '' %>>中文</option><option value="en" <%= lang==='en' ? 'selected' : '' %>>EN</option></select><select class="input" style="width:120px" onchange="setTheme(this.value)"><option value="system">system</option><option value="dark">dark</option><option value="light">light</option></select><a class="btn" href="/?lang=<%= lang %>">Leads</a><a class="btn" href="/dashboard?lang=<%= lang %>">Dashboard</a></div></div>
<div class="card table-wrap"><table><tr><th>ID</th><th>LeadID</th><th>Name</th><th>Action</th><th>Actor</th><th>Time</th></tr>
<% rows.forEach(r=> { %><tr><td><%= r.id %></td><td><%= r.lead_id %></td><td><%= r.name || '' %></td><td><%= r.action %></td><td><%= r.actor %></td><td><%= r.created_at %></td></tr><% }) %>
</table></div></div></body></html>
